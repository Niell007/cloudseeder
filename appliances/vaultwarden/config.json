{
  "Header": "Cloud Seeder by IPv6rs - Vaultwarden Appliance",
  "Entries": [
    {
      "VariableName": "_NAME",
      "Question": "What's the name of this appliance?",
      "CanBeNull": false,
      "AcceptableAnswers": [],
      "AllowedChars": "^[a-zA-Z0-9]+$",
      "MinLength": 4,
      "MaxLength": 16,
      "Type":"string",
      "Placeholder": "vaultwarden"
    },
    {
      "VariableName": "_PASSWORD",
      "Question": "What's the root password?",
      "CanBeNull": false,
      "AcceptableAnswers": [],
      "AllowedChars": "^[a-zA-Z0-9!@#$%^&*()-_+=`~,<.>?;:]+$",
      "MinLength": 4,
      "MaxLength": 32,
      "Type":"password",
      "Placeholder": "Enter password"
    },
    {
      "VariableName": "_SERVERNAME",
      "Question": "What's the domain name for this Vaultwarden?",
      "CanBeNull": false,
      "AcceptableAnswers": [],
      "AllowedChars": "^[a-zA-Z0-9._-]+$",
      "MinLength": 3,
      "MaxLength": 48,
      "Type":"string",
      "Placeholder": "domain.com"
    },
    {
      "VariableName": "_ADMINEMAIL",
      "Question": "What's the admin e-mail for this Vaultwarden?",
      "CanBeNull": false,
      "AcceptableAnswers": [],
      "AllowedChars": "^[a-zA-Z0-9._-]+@[a-zA-Z0-9._-]+$",
      "MinLength": 3,
      "MaxLength": 48,
      "Type":"string",
      "Placeholder": "me@domain.com"
    },
    {
      "VariableName": "_ADMINPASSWORD",
      "Question": "What's the admin password?",
      "CanBeNull": false,
      "AcceptableAnswers": [],
      "AllowedChars": "^[a-zA-Z0-9!@#$%^&*()-_+=`~,<.>?;:]+$",
      "MinLength": 12,
      "MaxLength": 32,
      "Type":"password",
      "Placeholder": "Enter password"
    },
    {
      "VariableName": "_EMAIL",
      "Question": "What's your email for LetsEncrypt?",
      "CanBeNull": false,
      "AcceptableAnswers": [],
      "AllowedChars": "^[a-zA-Z0-9._-]+@[a-zA-Z0-9._-]+$",
      "MinLength": 3,
      "MaxLength": 48,
      "Type":"string",
      "Placeholder": "me@domain.com"
    },
    {
      "VariableName": "_WG",
      "Question": "IPv6rs WireGuard Configuration:",
      "CanBeNull": false,
      "Type":"string",
      "AcceptableAnswers": ["conf"],
      "Placeholder": "FILEPICKER"
    }
  ],
  "SubmitButtonText": "Create",
  "exec": "~/.ipv6rs/appliances/vaultwarden/install.sh"
}
