{
  "Header": "Cloud Seeder by IPv6rs - Mastodon Appliance",
  "Entries": [
    {
      "VariableName": "_NAME",
      "Question": "What's the name of this appliance?",
      "CanBeNull": false,
      "AcceptableAnswers": [],
      "AllowedChars": "^[a-zA-Z0-9]+$",
      "MinLength": 4,
      "MaxLength": 16,
      "Type":"string",
      "Placeholder": "mastodon"
    },
    {
      "VariableName": "_PASSWORD",
      "Question": "What's the root password?",
      "CanBeNull": false,
      "AcceptableAnswers": [],
      "AllowedChars": "^[a-zA-Z0-9!@#$%^&*()-_+=`~,<.>?;:]+$",
      "MinLength": 4,
      "MaxLength": 32,
      "Type":"password",
      "Placeholder": "Enter password"
    },
    {
      "VariableName": "_SERVERNAME",
      "Question": "What's the domain name for this Mastodon?",
      "CanBeNull": false,
      "AcceptableAnswers": [],
      "AllowedChars": "^[a-zA-Z0-9._-]+$",
      "MinLength": 3,
      "MaxLength": 48,
      "Type":"string",
      "Placeholder": "domain.com"
    },
    {
      "VariableName": "_USERNAME",
      "Question": "What's the admin username going to be on this Mastodon?",
      "CanBeNull": false,
      "AcceptableAnswers": [],
      "AllowedChars": "^[a-zA-Z0-9]+$",
      "MinLength": 8,
      "MaxLength": 16,
      "Type":"string",
      "Placeholder": "somename"
    },
    {
      "VariableName": "_USEREMAIL",
      "Question": "What's the email for this admin user?",
      "CanBeNull": false,
      "AcceptableAnswers": [],
      "AllowedChars": "^[a-zA-Z0-9._-]+@[a-zA-Z0-9._-]+$",
      "MinLength": 3,
      "MaxLength": 48,
      "Type":"string",
      "Placeholder": "somename@domain.com"
    },
    {
      "VariableName": "_EMAIL",
      "Question": "What's your email for LetsEncrypt?",
      "CanBeNull": false,
      "AcceptableAnswers": [],
      "AllowedChars": "^[a-zA-Z0-9._-]+@[a-zA-Z0-9._-]+$",
      "MinLength": 3,
      "MaxLength": 48,
      "Type":"string",
      "Placeholder": "me@domain.com"
    },
    {
      "VariableName": "_WG",
      "Question": "IPv6rs WireGuard Configuration:",
      "CanBeNull": false,
      "Type":"string",
      "AcceptableAnswers": ["conf"],
      "Placeholder": "FILEPICKER"
    }
  ],
  "SubmitButtonText": "Create",
  "exec": "~/.ipv6rs/appliances/mastodon/install.sh"
}
