{
  "Header": "Cloud Seeder by IPv6rs - Planka Appliance",
  "Entries": [
    {
      "VariableName": "_NAME",
      "Question": "What's the name of this appliance?",
      "CanBeNull": false,
      "AcceptableAnswers": [],
      "AllowedChars": "^[a-zA-Z0-9]+$",
      "MinLength": 4,
      "MaxLength": 16,
      "Type":"string",
      "Placeholder": "planka"
    },
    {
      "VariableName": "_PASSWORD",
      "Question": "What's the root password?",
      "CanBeNull": false,
      "AcceptableAnswers": [],
      "AllowedChars": "^[a-zA-Z0-9!@#$%^&*()-_+=`~,<.>?;:]+$",
      "MinLength": 4,
      "MaxLength": 32,
      "Type":"password",
      "Placeholder": "Enter password"
    },
    {
      "VariableName": "_SERVERNAME",
      "Question": "What's the domain name for this Planka?",
      "CanBeNull": false,
      "AcceptableAnswers": [],
      "AllowedChars": "^[a-zA-Z0-9._-]+$",
      "MinLength": 3,
      "MaxLength": 48,
      "Type":"string",
      "Placeholder": "domain.com"
    },
    {
      "VariableName": "_ADMINEMAIL",
      "Question": "What's the admin user's email for this Planka?",
      "CanBeNull": false,
      "AcceptableAnswers": [],
      "AllowedChars": "^[a-zA-Z0-9._-]+@[a-zA-Z0-9._-]+$",
      "MinLength": 3,
      "MaxLength": 48,
      "Type":"string",
      "Placeholder": "me@domain.com"
    },
    {
      "VariableName": "_ADMINNAME",
      "Question": "What's the admin's full name?",
      "CanBeNull": false,
      "AcceptableAnswers": [],
      "AllowedChars": "^[a-zA-Z0-9 .]+$",      
      "MinLength": 2,      
      "MaxLength": 32,   
      "Type":"string",
      "Placeholder": "Admin Person"
    },
    {
      "VariableName": "_ADMINUSERNAME",
      "Question": "What's the admin username for this Planka?",
      "CanBeNull": false,
      "AcceptableAnswers": [],
      "AllowedChars": "^[a-zA-Z0-9]+$",      
      "MinLength": 8,      
      "MaxLength": 16,   
      "Type":"string",
      "Placeholder": "adminuser"
    },
    {
      "VariableName": "_ADMINPASSWORD",
      "Question": "What's the pasword for the admin user?",
      "CanBeNull": false,
      "AcceptableAnswers": [],
      "AllowedChars": "^[a-zA-Z0-9!@#$%^&*()-_+=`~,<.>?;:]+$",
      "MinLength": 4,
      "MaxLength": 32,
      "Type":"password",
      "Placeholder": "Enter Password"
    },
    {
      "VariableName": "_EMAIL",
      "Question": "What's your email for LetsEncrypt?",
      "CanBeNull": false,
      "AcceptableAnswers": [],
      "AllowedChars": "^[a-zA-Z0-9._-]+@[a-zA-Z0-9._-]+$",
      "MinLength": 3,
      "MaxLength": 48,
      "Type":"string",
      "Placeholder": "me@domain.com"
    },
    {
      "VariableName": "_WG",
      "Question": "IPv6rs WireGuard Configuration:",
      "CanBeNull": false,
      "Type":"string",
      "AcceptableAnswers": ["conf"],
      "Placeholder": "FILEPICKER"
    }
  ],
  "SubmitButtonText": "Create",
  "exec": "~/.ipv6rs/appliances/planka/install.sh"
}
